<p>
  <h1><%= @playlist.name %></h1>
</p>

<p>
  <strong>Description:</strong>
  <%= @playlist.description %>
</p>

<p>
  <strong>Author:</strong>
  <%= @playlist.original_author_dj_name %>
</p>

<% if @songs.length > 0 %>

<h2>Songs</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Artist</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= song.artist %></td>
        <td><%= link_to 'Show', "/playlists/#{@playlist.id}/songs/#{song.id}" %></td>
        <% if @playlist.permission_to_edit?(current_user) && @playlist.permission_to_delete?(current_user)%>
        <td><%= link_to 'Remove from Playlist', "/playlists/#{@playlist.id}/songs/#{song.id}/remove", method: :delete %></td>
        <% else %>
        <td></td>
        <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>

<h2>This playlist has no songs on it. </h2>

<% end %>

  <% if @playlist.permission_to_edit?(current_user) && @playlist.permission_to_delete?(current_user)%>
  <%= link_to 'Add Song to Playlist', new_song_path(pid: @playlist.id) %> |
  <%= link_to 'Edit Playlist Properties', edit_playlist_path(pid: @playlist.id) %> |
  <% else %>
  <% end %>
<%= link_to 'Back', playlists_path %>
